# LinkMy v2.1 - Docker Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_ROOT_PASSWORD=linkmy_root_secure_pass_2024
DB_NAME=linkmy_db
DB_USER=linkmy_user
DB_PASSWORD=linkmy_secure_pass_2024

# Application Ports
WEB_PORT=83
DB_PORT=3307
PHPMYADMIN_PORT=8083

# Email Configuration (Optional - for PHPMailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_EMAIL=noreply@linkmy.com
MAIL_FROM_NAME=LinkMy

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_SIZE=10M
PHP_POST_MAX_SIZE=10M

# Security (Production)
# Uncomment and set in production
# APP_ENV=production
# APP_DEBUG=false
